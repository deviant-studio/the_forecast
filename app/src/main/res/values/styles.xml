<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowTitleSize">0dp</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary</item>
        <item name="android:colorAccent">@color/accent</item>
       <!-- <item name="actionBarStyle">@style/ActionBar</item>-->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
       <!-- <item name="controlBackground">@color/primary</item>
        <item name="android:colorControlNormal">@color/primary</item>
        <item name="android:colorButtonNormal">@color/primary</item>-->

        <!--  <item name="android:textColorPrimary">#fff</item>
          <item name="android:textColor">#727272</item>-->

        <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:windowTransitionBackgroundFadeDuration">0</item>-->
       <!-- <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>-->
         <item name="android:windowAllowEnterTransitionOverlap">true</item>
         <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <!-- <item name="android:windowSharedElementEnterTransition">@android:transition/explode</item>
         <item name="android:windowSharedElementExitTransition">@android:transition/explode</item>-->

    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/primary</item>
    </style>


    <style name="item_text1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="item_text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="item_text3" parent="item_text1">
        <item name="android:textColor">#aaa</item>
    </style>

    <style name="item_text4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="city_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="toolbar"  parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:transitionName">toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
    </style>


</resources>
