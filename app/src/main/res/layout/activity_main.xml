<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="weather"
            type="ds.features.model.CurrWeatherData"
            />

        <variable
            name="clicker"
            type="android.view.View.OnClickListener"
            />

        <variable
            name="timer"
            type="ds.features.model.TimeProvider"
            />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:transitionGroup="true"
            android:transitionName="content"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/toolbar"
                app:title="Current Weather"
                />

            <RelativeLayout android:id="@+id/root"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:orientation="vertical"

                >


                <TextView
                    android:id="@+id/nameLabel"
                    style="@style/item_text4"
                    android:layout_marginLeft="?listPreferredItemPaddingLeft"
                    android:text="City"
                    />

                <TextView

                    android:id="@+id/name"
                    style="@style/item_text4"
                    android:layout_alignBaseline="@+id/nameLabel"
                    android:layout_toRightOf="@+id/nameLabel"
                    android:text="@{weather.name}"
                    tools:text="Kharkiv"
                    />

                <TextView
                    android:id="@+id/tempLabel"
                    style="@style/item_text4"
                    android:layout_alignLeft="@+id/nameLabel"
                    android:layout_below="@+id/nameLabel"
                    android:text="Temp"
                    />

                <TextView
                    android:id="@+id/temp"
                    style="@style/item_text4"
                    android:layout_alignBaseline="@+id/tempLabel"
                    android:layout_toRightOf="@+id/tempLabel"
                    android:text="@{String.valueOf(weather.main.temp)}"

                    />

                <TextView
                    android:id="@+id/timeLabel"
                    style="@style/item_text4"
                    android:layout_alignLeft="@+id/nameLabel"
                    android:layout_below="@+id/tempLabel"
                    android:layout_marginBottom="10dp"
                    android:text="Time"
                    />

                <TextView
                    android:id="@+id/time"
                    style="@style/item_text4"
                    android:layout_alignBaseline="@+id/timeLabel"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/timeLabel"
                    android:text="@{timer.time}"

                    />


            </RelativeLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="?listPreferredItemPaddingRight"
                android:layout_marginTop="-32dp"
                android:src="@drawable/ic_wb_sunny"
                android:tint="@color/accent"
                android:transitionName="fab"
                app:backgroundTint="#fff"
                android:onClickListener="@{clicker}"

                />

        </LinearLayout>

        <View
            android:id="@+id/mist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:windowBackground"
            android:visibility="invisible"

            />
    </FrameLayout>
</layout>

